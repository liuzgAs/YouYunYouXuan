<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/jianbian_fenxiangzhongxin">

        <com.vip.uyux.customview.CircleImageView
            android:id="@+id/imageImg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:src="@mipmap/touxiang_mine"
            app:civ_border_color="#ebd9b2"
            app:civ_border_width="1.5dp" />

        <TextView
            android:id="@+id/textName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageImg"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/imageImg"
            android:text="优云优选"
            android:textColor="@color/white"
            android:textSize="@dimen/bigText" />

        <TextView
            android:id="@+id/textLv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textName"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/textName"
            android:background="@drawable/shpae_dashi"
            android:paddingBottom="1dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="1dp"
            android:text="大师"
            android:textColor="@color/white"
            android:textSize="@dimen/moreLitterText" />

        <TextView
            android:id="@+id/textDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageImg"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/imageImg"
            android:text="加入时间：2018.12.21"
            android:textColor="#fcacac"
            android:textSize="@dimen/litterText" />

    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/viewChanPinFH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.vip.uyux.customview.QMUIVerticalTextView
                android:id="@+id/textTitle01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#fd9e58"
                android:paddingBottom="15dp"
                android:paddingLeft="8dp"
                android:paddingRight="6dp"
                android:paddingTop="15dp"
                android:text="产品分红"
                android:textColor="@color/white" />

            <LinearLayout
                android:id="@+id/viewFenHong01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/imageRight01"
                android:layout_toRightOf="@+id/textTitle01"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.vip.uyux.customview.MyFontTextView
                        android:id="@+id/textTotal_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="¥0"
                        android:textColor="@color/light_black"
                        android:textSize="28dp" />

                    <com.vip.uyux.customview.MyFontTextView
                        android:id="@+id/textY_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="¥0"
                        android:textColor="@color/light_black"
                        android:textSize="28dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/textDes0001"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="可提现分红"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/normal_textsize" />

                    <TextView
                        android:id="@+id/textDes0002"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="预计分红"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/normal_textsize" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/viewQuanXian01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/textTitle01"
                android:gravity="center"
                android:visibility="gone">

                <TextView
                    android:id="@+id/text0102"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="您当前还没有查看权限"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/bigText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/text0102"
                    android:text="立即升级"
                    android:textColor="#fe6060"
                    android:textSize="@dimen/bigText" />
            </RelativeLayout>


            <ImageView
                android:id="@+id/imageRight01"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@mipmap/fenhongjaintou" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/viewZhiTuiFH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.vip.uyux.customview.QMUIVerticalTextView
                android:id="@+id/textTitle02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#81d6d3"
                android:paddingBottom="15dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="15dp"
                android:text="直推分红"
                android:textColor="@color/white" />

            <LinearLayout
                android:id="@+id/viewFenHong02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/imageRight02"
                android:layout_toRightOf="@+id/textTitle02"
                android:orientation="vertical"
                android:visibility="invisible">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.vip.uyux.customview.MyFontTextView
                        android:id="@+id/textL_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="¥0"
                        android:textColor="@color/light_black"
                        android:textSize="28dp" />

                    <com.vip.uyux.customview.MyFontTextView
                        android:id="@+id/textZ_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="¥0"
                        android:textColor="@color/light_black"
                        android:textSize="28dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/textDes0101"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="累计分红"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/normal_textsize" />

                    <TextView
                        android:id="@+id/textDes0102"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="总收益"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/normal_textsize" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/viewQuanXian02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/textTitle02"
                android:gravity="center"
                android:visibility="visible">

                <TextView
                    android:id="@+id/text0202"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="您当前还没有查看权限"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/bigText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/text0202"
                    android:text="立即升级"
                    android:textColor="#fe6060"
                    android:textSize="@dimen/bigText" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/imageRight02"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@mipmap/fenhongjaintou" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textTel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="联系客服"
                android:textColor="#fe6060"
                android:textSize="@dimen/bigText" />

            <TextView
                android:id="@+id/textChangJianWT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="常见问题"
                android:textColor="#fe6060"
                android:textSize="@dimen/bigText" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>