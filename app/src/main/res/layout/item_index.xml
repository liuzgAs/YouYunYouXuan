<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="@dimen/leftAndRight"
            android:layout_marginTop="15dp"
            android:text="全球美食"
            android:textColor="@color/light_black"
            android:textSize="18dp"
            android:textStyle="bold" />
        <RelativeLayout
            android:id="@+id/viewMore"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_toRightOf="@+id/text0000"
                android:id="@+id/image0000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/leftAndRight"
                android:src="@mipmap/right" />

            <TextView
                android:id="@+id/text0000"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:text="更多"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/litterText" />
        </RelativeLayout>

    </RelativeLayout>

    <com.vip.uyux.customview.HorizontalView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.vip.uyux.customview.MyEasyRecyclerView
            app:scrollbars="none"
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:scrollbarStyle="insideOverlay" />
    </com.vip.uyux.customview.HorizontalView>

</LinearLayout>