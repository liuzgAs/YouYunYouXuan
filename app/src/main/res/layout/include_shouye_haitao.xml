<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/leftAndRight"
    android:layout_marginLeft="@dimen/leftAndRight"
    android:layout_marginRight="@dimen/leftAndRight"
    app:cardCornerRadius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/viewHaiTao0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/textHaiTaoTitle0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/leftAndRight"
                    android:layout_marginTop="12dp"
                    android:text="进口优选"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/bigText" />

                <TextView
                    android:id="@+id/textHaiTaoDes0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textHaiTaoTitle0"
                    android:layout_marginLeft="@dimen/leftAndRight"
                    android:layout_marginTop="2dp"
                    android:text="正品保障15天售后无忧"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/litterText" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textHaiTaoDes0"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="@dimen/leftAndRight"
                    android:layout_marginRight="@dimen/leftAndRight"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <com.luck.picture.lib.widget.SquareRelativeLayout
                        android:layout_marginRight="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/imageHaiTaoImg0001"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </com.luck.picture.lib.widget.SquareRelativeLayout>

                    <com.luck.picture.lib.widget.SquareRelativeLayout
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/imageHaiTaoImg0002"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </com.luck.picture.lib.widget.SquareRelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/background" />

