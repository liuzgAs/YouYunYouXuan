<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".activity.BuKeTiXianActivity">
    <include layout="@layout/view_bar_white"/>
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <com.vip.uyux.customview.MyFontTextView
            android:id="@+id/textShouYi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:text="¥0"
            android:textColor="@color/light_black"
            android:textSize="50dp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btnLiJiTX"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/textShouYi"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_basic01_25dp_jian_bian"
            android:text="立即升级马上提现"
            android:textColor="@color/white" />
        <ImageView
            android:visibility="gone"
            android:src="@mipmap/wenhao"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/leftAndRight"
            android:layout_width="25dp"
            android:layout_height="25dp" />
    </RelativeLayout>
    <android.support.design.widget.TabLayout
        android:layout_marginTop="5dp"
        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/normalItemHeight"
        android:background="@color/white"
        app:tabIndicatorColor="@color/basic_color"
        app:tabIndicatorHeight="0dp"
        app:tabMode="fixed" />
    <android.support.v4.view.ViewPager
        android:layout_marginTop="1dp"
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
