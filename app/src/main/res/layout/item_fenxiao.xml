<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_selector_white_system_gray"
   >

    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/textDes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="2017大众"
        android:textColor="@color/light_black"
        android:textSize="@dimen/bigText"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/textGrade"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="2dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textSize="10dp"
        android:layout_toRightOf="@+id/textDes"
        android:layout_alignBottom="@+id/textDes"
        android:textColor="@color/white"
        android:text="大师"
        android:background="@drawable/shape_basic_20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/textNameDes"
        android:layout_alignBottom="@+id/textGrade"
        android:layout_marginLeft="5dp"
        android:text="直推"
        android:textSize="@dimen/moreLitterText"
        android:layout_toRightOf="@id/textGrade"
        android:textColor="@color/text_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginBottom="15dp"
        android:id="@+id/textCreatetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textDes"
        android:layout_alignStart="@+id/textDes"
        android:layout_below="@+id/textDes"
        android:layout_marginTop="5dp"
        android:text="2017.12.23"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/litterText" />

    <TextView
        android:textStyle="bold"
        android:id="@+id/textPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textDes"
        android:layout_alignBottom="@+id/textDes"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:text="¥25"
        android:textColor="@color/light_black"
        android:textSize="@dimen/MoreBigText" />

    <TextView
        android:id="@+id/textMoneyDes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textCreatetime"
        android:layout_alignBottom="@+id/textCreatetime"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:text="不可提现"
        android:textColor="@color/text_gray"
        android:textSize="11dp" />
</RelativeLayout>