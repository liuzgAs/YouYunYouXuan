<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/layout_selector_white_system_gray"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="@dimen/leftAndRight"
        android:scaleType="centerCrop"
        android:src="@mipmap/touxiang_mine"
        android:id="@+id/imageImg"
        android:layout_width="50dp"
        android:layout_height="50dp" />
    <TextView
        android:textColor="@color/light_black"
        android:text="李晓媛"
        android:layout_toRightOf="@+id/imageImg"
        android:layout_alignTop="@+id/imageImg"
        android:layout_marginLeft="10dp"
        android:textSize="@dimen/bigText"
        android:id="@+id/textName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/textLv"
        android:layout_toRightOf="@+id/textName"
        android:layout_alignBottom="@+id/textName"
        android:layout_marginBottom="2dp"
        android:background="@drawable/shpae_dashi"
        android:textColor="@color/white"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="1dp"
        android:paddingTop="1dp"
        android:textSize="@dimen/moreLitterText"
        android:text="大师"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="ID：4646565464"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/litterText"
        android:layout_alignBottom="@+id/imageImg"
        android:layout_toRightOf="@+id/imageImg"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:id="@+id/textID"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/textLeiJi"
        android:text="累计收益：¥300"
        android:textColor="@color/light_black"
        android:textSize="@dimen/normal_textsize"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@+id/textID"
        android:layout_marginRight="@dimen/leftAndRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>