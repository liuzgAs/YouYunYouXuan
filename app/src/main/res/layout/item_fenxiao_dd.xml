<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f9f0f1">

        <TextView
            android:id="@+id/textOrder_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="@dimen/leftAndRight"
            android:layout_marginTop="10dp"
            android:text="编号：457467654654"
            android:textColor="@color/light_black"
            android:textSize="@dimen/litterText" />

        <TextView
            android:id="@+id/textStatus_v"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/leftAndRight"
            android:text="已付款"
            android:textColor="@color/basic_color"
            android:textSize="@dimen/normal_textsize" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/imageImg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="@dimen/leftAndRight"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/textName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageImg"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/imageImg"
            android:text="李晓媛"
            android:textColor="@color/light_black"
            android:textSize="@dimen/normal_textsize" />

        <TextView
            android:id="@+id/textDes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/imageImg"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/imageImg"
            android:text="5464654654"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/litterText" />

        <TextView
            android:id="@+id/textLv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textName"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/textName"
            android:background="@drawable/shpae_dashi"
            android:paddingBottom="1dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="1dp"
            android:text="大师"
            android:textColor="@color/white"
            android:textSize="@dimen/moreLitterText" />

        <TextView
            android:id="@+id/textEstimate_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textDes"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/leftAndRight"
            android:text="预计佣金：¥78.00"
            android:textColor="@color/light_black"
            android:textSize="@dimen/normal_textsize" />


    </RelativeLayout>
    <!--<com.jude.easyrecyclerview.EasyRecyclerView-->
        <!--android:id="@+id/recyclerView"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="1dp"-->
        <!--app:scrollbarStyle="insideOverlay" />-->
</LinearLayout>