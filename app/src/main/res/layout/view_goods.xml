<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imageImg"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="@dimen/leftAndRight"
        android:layout_marginTop="15dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/shangpin" />

    <TextView
        android:id="@+id/textGoods_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageImg"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="@dimen/leftAndRight"
        android:layout_toRightOf="@+id/imageImg"
        android:ellipsize="end"
        android:lines="2"
        android:text="一品轩一品轩一品轩"
        android:textColor="@color/light_black"
        android:textSize="@dimen/normal_textsize" />

    <TextView
        android:id="@+id/textSpe_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textGoods_name"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/imageImg"
        android:text="规格"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/litterText" />

    <TextView
        android:id="@+id/textQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageImg"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/imageImg"
        android:text="×2"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/normal_textsize" />

</RelativeLayout>