<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_margin="@dimen/leftAndRight"
        android:layout_width="match_parent"
        android:id="@+id/imageImg"
        android:layout_height="200dp" />
    <TextView
        android:layout_marginLeft="@dimen/leftAndRight"
        android:layout_marginRight="@dimen/leftAndRight"
        android:layout_width="wrap_content"
        android:textColor="@color/light_black"
        android:layout_below="@+id/imageImg"
        android:layout_marginTop="5dp"
        android:text="冬天起不了床，可能要怪它们"
        android:textSize="@dimen/bigText"
        android:lines="1"
        android:id="@+id/textTitle"
        android:ellipsize="end"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="@dimen/moreLitterText"
        android:text="啊实打实大沙发沙发"
        android:layout_below="@+id/textTitle"
        android:layout_marginLeft="@dimen/leftAndRight"
        android:layout_marginRight="@dimen/leftAndRight"
        android:layout_marginTop="5dp"
        android:id="@+id/textDes"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/textName"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:textColor="@color/white"
        android:text="李晓媛推荐"
        android:textSize="@dimen/moreLitterText"
        android:background="@drawable/shape_tran_15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>