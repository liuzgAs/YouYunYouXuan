<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context="com.vip.uyux.activity.YuEActivity">

    <include layout="@layout/view_bar_white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/white">

        <com.vip.uyux.customview.MyFontTextView
            android:id="@+id/textShouYi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:text="¥0"
            android:textColor="@color/light_black"
            android:textSize="50dp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btnLiJiTX"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/textShouYi"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_basic01_25dp_jian_bian"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="我要提现"
            android:textColor="@color/white" />

        <ImageView
            android:visibility="gone"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/leftAndRight"
            android:src="@mipmap/wenhao" />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/viewStart"
            android:layout_width="match_parent"
            android:layout_height="@dimen/normalItemHeight"
            android:background="@drawable/layout_selector_white_system_gray">

            <TextView
                android:id="@+id/text01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="开始时间"
                android:textSize="@dimen/bigText" />

            <TextView
                android:id="@+id/textStart"
                android:hint="选择开始时间"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/text01"
                android:layout_toRightOf="@+id/text01"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/bigText" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@mipmap/right" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/viewEnd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/normalItemHeight"
            android:layout_marginTop="1dp"
            android:background="@drawable/layout_selector_white_system_gray">

            <TextView
                android:id="@+id/text02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="结束时间"
                android:textSize="@dimen/bigText" />

            <TextView
                android:id="@+id/textEnd"
                android:hint="选择结束时间"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/text02"
                android:layout_toRightOf="@+id/text02"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/bigText" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@mipmap/right" />
        </RelativeLayout>
    </LinearLayout>
    <com.jude.easyrecyclerview.EasyRecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        app:layout_empty="@layout/view_empty"
        app:layout_progress="@layout/view_progress"
        app:scrollbarStyle="insideOverlay" />
</LinearLayout>
