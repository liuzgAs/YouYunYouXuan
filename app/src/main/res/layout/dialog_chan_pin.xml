<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageImg"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="@dimen/leftAndRight"
            android:layout_marginTop="15dp"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/textDialogPrice"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageImg"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/imageImg"
            android:text="¥78.00"
            android:textColor="@color/basic_color"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textStock_numD"
            android:layout_marginBottom="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textGuiGe"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/imageImg"
            android:text="库存2323件"
            android:textSize="@dimen/normal_textsize" />

        <TextView
            android:id="@+id/textGuiGe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageImg"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/imageImg"
            android:text="请选择规格 数量"
            android:textSize="@dimen/normal_textsize" />
        <ImageView
            android:id="@+id/imageCancle"
            android:src="@drawable/cancle_selector"
            android:layout_width="28dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/leftAndRight"
            android:layout_marginRight="@dimen/leftAndRight"
            android:layout_height="28dp" />
    </RelativeLayout>
    <TextView
        android:layout_marginLeft="@dimen/leftAndRight"
        android:layout_marginRight="@dimen/leftAndRight"
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <com.vip.uyux.customview.ListView4ScrollView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:textColor="@color/light_black"
            android:layout_marginLeft="@dimen/leftAndRight"
            android:textSize="@dimen/normal_textsize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购买数量"
            android:id="@+id/textView152"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/imageAdd"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/leftAndRight"
            android:src="@mipmap/add" />

        <EditText
            android:id="@+id/editNum"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/imageAdd"
            android:background="@drawable/shape_gray1dp"
            android:gravity="center"
            android:inputType="number"
            android:text="1"
            android:textSize="@dimen/litterText" />

        <ImageView
            android:id="@+id/imageDelete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/editNum"
            android:src="@mipmap/delete1" />
    </RelativeLayout>

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

    <Button
        android:textSize="@dimen/MoreBigText"
        android:textColor="@color/white"
        android:background="@color/basic_color"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="确定"
        android:id="@+id/buttonSure" />
</LinearLayout>