<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:visibility="gone"
        android:layout_marginTop="@dimen/top"
        android:background="@drawable/layout_selector_white_system_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="@dimen/leftAndRight"
            android:layout_marginTop="15dp"
            android:text="活动"
            android:textColor="@color/light_black"
            android:textSize="@dimen/normal_textsize" />

        <ImageView
            android:id="@+id/image0500"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/leftAndRight"
            android:src="@mipmap/right" />

        <TextView
            android:id="@+id/textScoreDes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/image0500"
            android:text="省10元：全场5折年货节"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/normal_textsize" />

    </RelativeLayout>
    <RelativeLayout
        android:visibility="gone"
        android:layout_marginTop="1dp"
        android:background="@drawable/layout_selector_white_system_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="@dimen/leftAndRight"
            android:layout_marginTop="15dp"
            android:text="优惠券"
            android:textColor="@color/light_black"
            android:textSize="@dimen/normal_textsize" />

        <ImageView
            android:id="@+id/image0600"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/leftAndRight"
            android:src="@mipmap/right" />

        <TextView
            android:id="@+id/textScoreDes1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/image0600"
            android:text="抵扣5元优惠券"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/normal_textsize" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:background="@drawable/layout_selector_white_system_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textShipKey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="@dimen/leftAndRight"
            android:layout_marginTop="15dp"
            android:text="配送方式"
            android:textColor="@color/light_black"
            android:textSize="@dimen/normal_textsize" />

        <ImageView
            android:visibility="invisible"
            android:id="@+id/image0800"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/leftAndRight"
            android:src="@mipmap/right" />

        <TextView
            android:id="@+id/textShipDes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/image0800"
            android:text="快递（包邮）"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/normal_textsize" />

    </RelativeLayout>
    <TextView
        android:visibility="visible"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:paddingLeft="@dimen/leftAndRight"
        android:paddingTop="15dp"
        android:text="买家留言（选填）"
        android:textColor="@color/light_black"
        android:textSize="@dimen/normal_textsize" />
    <EditText
        android:visibility="visible"
        android:id="@+id/editPayMsg"
        android:hint="有什么要交代的么？"
        android:textSize="@dimen/normal_textsize"
        android:gravity="top|left"
        android:padding="@dimen/leftAndRight"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="80dp" />
    <RelativeLayout
        android:visibility="gone"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textSum"
            android:text="¥245.00"
            android:textColor="@color/basic_color"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/leftAndRight"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:textSize="@dimen/MoreBigText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="@dimen/normal_textsize"
            android:text="共3件商品 小计："
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/textSum"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>