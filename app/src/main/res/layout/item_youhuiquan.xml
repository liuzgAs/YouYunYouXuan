<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/leftAndRight"
    android:layout_marginRight="@dimen/leftAndRight"
    android:layout_marginTop="@dimen/leftAndRight">

    <LinearLayout
        android:animateLayoutChanges="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/viewKeZengSong"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/viewBg"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@color/basic_color"
                android:gravity="center">

                <com.vip.uyux.customview.MyFontTextView
                    android:id="@+id/textMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="50"
                    android:textColor="@color/white"
                    android:textSize="50dp" />

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:id="@+id/textLimit_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textMoney"
                    android:layout_centerHorizontal="true"
                    android:text="满129元可用"
                    android:textColor="@color/white"
                    android:textSize="@dimen/normal_textsize" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <TextView
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:layout_marginRight="@dimen/leftAndRight"
                        android:id="@+id/textName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="仅可购买优选优购指定商品"
                        android:textColor="@color/light_black"
                        android:textSize="@dimen/bigText" />

                    <TextView
                        android:id="@+id/textUse_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textName"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:text="2018.01.22-2018.02.22"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/litterText" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/background" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/image0000"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:src="@mipmap/kezengsong" />

                        <TextView
                            android:id="@+id/textSendDes"
                            android:layout_marginRight="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/image0000"
                            android:text="可赠送"
                            android:textSize="@dimen/litterText" />
                    </RelativeLayout>

                    <TextView
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:gravity="center"
                        android:id="@+id/btnBtnDes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/leftAndRight"
                        android:background="@drawable/shape_basic01_1dp_25dp"
                        android:text="立即使用"
                        android:textColor="@color/basic_color"
                        android:textSize="@dimen/litterText" />

                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/viewZengSong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">
            <TextView
                android:background="@color/background"
                android:layout_width="match_parent"
                android:layout_height="2dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/zengsongpengyou" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="赠送朋友"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/bigText" />
            </LinearLayout>
            <TextView
                android:layout_marginLeft="@dimen/leftAndRight"
                android:layout_marginRight="@dimen/leftAndRight"
                android:id="@+id/textDes"
                android:textSize="@dimen/normal_textsize"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:textColor="@color/text_gray"
                android:text="仅可购买优选优购指定商品"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
