<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginLeft="@dimen/leftAndRight"
    android:layout_marginRight="@dimen/leftAndRight"
    android:layout_marginTop="@dimen/leftAndRight">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/textTitle"
                    android:text="满500减50"
                    android:textSize="20dp"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/light_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/textDes"
                    android:text="全品类通用"
                    android:textSize="@dimen/normal_textsize"
                    android:textColor="@color/text_gray"
                    android:layout_below="@+id/textTitle"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/background"
                android:layout_width="match_parent"
                android:layout_height="1dp" />
            <TextView
                android:id="@+id/textE_time"
                android:text="有效期至：2016.07.23"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:textSize="@dimen/normal_textsize"
                android:textColor="@color/text_gray"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/basic_color">

            <com.vip.uyux.customview.MyFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="¥50"
                android:id="@+id/textAmount"
                android:textColor="@color/white"
                android:textSize="40dp" />
            <TextView
                android:id="@+id/textMoneyDes"
                android:layout_width="wrap_content"
                android:layout_below="@+id/textAmount"
                android:text="立即使用"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/normal_textsize"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
