<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context="com.vip.uyux.fragment.WoDeFragment">

    <include layout="@layout/view_bar_wode" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_margin="@dimen/leftAndRight"
                app:cardCornerRadius="15dp"
                app:cardPreventCornerOverlap="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/mine_top_bg"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_above="@+id/textChengZhangZhi"
                            android:layout_weight="1">

                            <com.vip.uyux.customview.CircleImageView
                                android:id="@+id/imageHead"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="15dp"
                                android:src="@mipmap/touxiang_mine" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@+id/imageHead"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="8dp"
                                android:layout_toRightOf="@+id/imageHead"
                                android:text="李达达"
                                android:textColor="@color/white"
                                android:textSize="@dimen/MoreBigText" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@+id/imageHead"
                                android:layout_marginBottom="8dp"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@+id/imageHead"
                                android:text="ID:123465465"
                                android:textColor="@color/white"
                                android:textSize="@dimen/normal_textsize" />


                        </RelativeLayout>

                        <TextView
                            android:id="@+id/textChengZhangZhi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="12dp"
                            android:layout_marginLeft="15dp"
                            android:text="成长值：300"
                            android:textColor="#efdda4"
                            android:textSize="@dimen/normal_textsize" />

                        <ImageView
                            android:id="@+id/imageLv"
                            android:layout_width="wrap_content"
                            android:layout_height="115dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="-3dp"
                            android:src="@mipmap/lv5" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="45dp"
                            android:layout_alignParentBottom="true"
                            android:layout_toLeftOf="@+id/imageLv"
                            android:src="@mipmap/lv" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="#22000000">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:src="@mipmap/zhuanshi" />

                        <LinearLayout
                            android:id="@+id/viewFuWu"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:gravity="center_vertical|right">

                            <ImageView
                                android:id="@+id/image0103"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_marginRight="10dp"
                                android:src="@mipmap/mine_shandian" />

                            <TextView
                                android:id="@+id/text0102"
                                android:layout_width="1dp"
                                android:layout_height="10dp"
                                android:layout_marginRight="10dp"
                                android:background="#656055" />

                            <ImageView
                                android:id="@+id/image0101"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_marginRight="10dp"
                                android:src="@mipmap/mine_che" />

                            <TextView
                                android:id="@+id/text0100"
                                android:layout_width="1dp"
                                android:layout_height="10dp"
                                android:layout_marginRight="10dp"
                                android:background="#656055" />

                            <ImageView
                                android:id="@+id/image0102"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_marginRight="10dp"
                                android:src="@mipmap/mine_baobao" />

                            <TextView
                                android:id="@+id/text0101"
                                android:layout_width="1dp"
                                android:layout_height="10dp"
                                android:layout_marginRight="10dp"
                                android:background="#656055" />

                            <ImageView
                                android:id="@+id/image0100"
                                android:layout_width="13dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="15dp"
                                android:src="@mipmap/gengduo_mine" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:layout_toLeftOf="@+id/viewFuWu"
                            android:text="已享3项服务"
                            android:textColor="#efdda4"
                            android:textSize="@dimen/normal_textsize" />
                    </RelativeLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/layout_selector_white_system_gray"
                    android:gravity="center_vertical">

                    <com.vip.uyux.customview.MyFontTextView
                        android:id="@+id/textYuE"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:text="2567.17"
                        android:textColor="@color/light_black"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textYuE"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="2dp"
                        android:text="我的余额"
                        android:textSize="@dimen/litterText" />
                </RelativeLayout>

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="wrap_content" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/layout_selector_white_system_gray"
                    android:gravity="center_vertical">

                    <com.vip.uyux.customview.MyFontTextView
                        android:id="@+id/textJiFen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:text="1883"
                        android:textColor="@color/light_black"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
