                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textJiFen"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="2dp"
                        android:text="我的积分"
                        android:textSize="@dimen/litterText" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="1dp"
                android:background="@color/white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/image0300"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:src="@mipmap/mine_qianbao" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/image0300"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:text="待付款"
                        android:textSize="@dimen/litterText" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/image0301"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:src="@mipmap/mine_daifahuo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/image0301"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:text="待发货"
                        android:textSize="@dimen/litterText" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/image0302"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:paddingBottom="4dp"
                        android:paddingTop="4dp"
                        android:src="@mipmap/mine_daishouhuo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/image0302"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:text="待收货"
                        android:textSize="@dimen/litterText" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/image0303"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        android:src="@mipmap/mine_daipingjia" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/image0303"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:text="待评价"
                        android:textSize="@dimen/litterText" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/image0304"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        android:src="@mipmap/mine_tuihuanhuo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/image0304"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:text="退/换货"
                        android:textSize="@dimen/litterText" />
                </RelativeLayout>
            </LinearLayout>

            <com.vip.uyux.customview.ResizableImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="@dimen/leftAndRight"
                android:layout_marginRight="@dimen/leftAndRight"
                android:layout_marginTop="5dp"
                android:src="@mipmap/fenxiangzhongxin" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/normalItemHeight"
                android:background="@drawable/layout_selector_white_system_gray">

                <ImageView
                    android:id="@+id/image0500"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/leftAndRight"
                    android:src="@mipmap/mine01" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/image0500"
                    android:text="我的评测"
                    android:textSize="@dimen/normal_textsize" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/leftAndRight"
                    android:src="@mipmap/right" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/normalItemHeight"
                android:layout_marginTop="1dp"
                android:background="@drawable/layout_selector_white_system_gray">

                <ImageView
                    android:id="@+id/image0600"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/leftAndRight"
                    android:src="@mipmap/mine02" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/image0600"
                    android:text="优惠券"
                    android:textSize="@dimen/normal_textsize" />

                <TextView
                    android:text="3张"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/image0601"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/normal_textsize" />

                <ImageView
                    android:id="@+id/image0601"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/leftAndRight"
                    android:src="@mipmap/right" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/normalItemHeight"
                android:layout_marginTop="1dp"
                android:background="@drawable/layout_selector_white_system_gray">

                <ImageView
                    android:id="@+id/image0700"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/leftAndRight"
                    android:src="@mipmap/mine03" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/image0700"
                    android:text="积分商城"
                    android:textSize="@dimen/normal_textsize" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/leftAndRight"
                    android:src="@mipmap/right" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/normalItemHeight"
                android:layout_marginTop="1dp"
                android:background="@drawable/layout_selector_white_system_gray">

                <ImageView
                    android:id="@+id/image0800"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/leftAndRight"
                    android:src="@mipmap/mine04" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/image0800"
                    android:text="我的收藏"
                    android:textSize="@dimen/normal_textsize" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/leftAndRight"
                    android:src="@mipmap/right" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/normalItemHeight"
                android:layout_marginTop="1dp"
                android:background="@drawable/layout_selector_white_system_gray">

                <ImageView
                    android:id="@+id/image0900"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/leftAndRight"
                    android:src="@mipmap/mine05" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/image0900"
                    android:text="我的足迹"
                    android:textSize="@dimen/normal_textsize" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/leftAndRight"
                    android:src="@mipmap/right" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/normalItemHeight"
                android:layout_marginTop="1dp"
                android:background="@drawable/layout_selector_white_system_gray">

                <ImageView
                    android:id="@+id/image1000"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/leftAndRight"
                    android:src="@mipmap/mine06" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/image1000"
                    android:text="联系客服"
                    android:textSize="@dimen/normal_textsize" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/leftAndRight"
                    android:src="@mipmap/right" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/normalItemHeight"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/layout_selector_white_system_gray">

                <ImageView
                    android:id="@+id/image1100"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
