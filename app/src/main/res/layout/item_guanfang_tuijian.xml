<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_selector_white_system_gray">

    <ImageView
        android:layout_marginLeft="@dimen/leftAndRight"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/shangpin"
        android:id="@+id/imageImg"
        android:layout_width="80dp"
        android:layout_height="80dp" />
    <TextView
        android:id="@+id/textTitle"
        android:text="商品"
        android:textColor="@color/light_black"
        android:textSize="@dimen/bigText"
        android:layout_toRightOf="@+id/imageImg"
        android:layout_alignTop="@+id/imageImg"
        android:layout_marginLeft="10dp"
        android:maxLines="2"
        android:layout_marginRight="@dimen/leftAndRight"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:id="@+id/viewCaiYong"
        android:layout_toRightOf="@+id/imageImg"
        android:layout_alignBottom="@+id/imageImg"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@mipmap/fuzhi"
            android:layout_width="15dp"
            android:layout_height="15dp" />
        <TextView
            android:text="采用"
            android:layout_marginLeft="5dp"
            android:textSize="@dimen/normal_textsize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>