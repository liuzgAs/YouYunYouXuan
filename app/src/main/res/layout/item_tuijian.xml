<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/layout_selector_white_system_gray"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_marginLeft="@dimen/leftAndRight"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:scaleType="centerCrop"
        android:layout_width="141dp"
        android:id="@+id/imageImg"
        android:layout_height="100dp" />
    <RelativeLayout
        android:layout_toRightOf="@+id/imageImg"
        android:layout_alignTop="@+id/imageImg"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageHead"
            android:layout_centerVertical="true"
            android:src="@mipmap/logo"
            android:layout_width="25dp"
            android:layout_height="25dp" />
        <TextView
            android:layout_marginLeft="10dp"
            android:textColor="@color/light_black"
            android:id="@+id/textName"
            android:layout_width="wrap_content"
            android:text="洗护组：汤汤"
            android:textSize="@dimen/moreLitterText"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageHead"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:id="@+id/textTitle"
        android:layout_marginRight="@dimen/leftAndRight"
        android:layout_toRightOf="@+id/imageImg"
        android:textSize="@dimen/bigText"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:textColor="@color/light_black"
        android:layout_marginTop="2dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="黑管双头口红刷美黑管双头口红刷美黑管双头口红刷美黑管双头口红刷美"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:maxLines="1"
        android:id="@+id/textDes"
        android:text="定制黑管双头"
        android:layout_alignBottom="@+id/imageImg"
        android:textSize="@dimen/moreLitterText"
        android:layout_toRightOf="@+id/imageImg"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/text_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>