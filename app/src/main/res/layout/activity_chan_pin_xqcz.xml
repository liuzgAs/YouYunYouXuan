<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vip.uyux.activity.ChanPinXQCZActivity">
    <include
        android:id="@+id/includeBar"
        layout="@layout/view_bar_chanpin_xq" />

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/viewTop"
        android:layout_below="@+id/includeBar"
        android:layout_above="@+id/viewDiBu"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                app:layout_scrollFlags="scroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <com.bigkoo.convenientbanner.ConvenientBanner
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/chanPinXQBanner"
                    android:background="@color/white"
                    app:canLoop="true" />

                <RelativeLayout
                    android:id="@+id/viewDaoJiShi"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/basic_color">

                    <ImageView
                        android:id="@+id/imageGoodType"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/leftAndRight"
                        android:src="@mipmap/xianshiqianggou" />

                    <TextView
                        android:id="@+id/textCountdown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/leftAndRight"
                        android:letterSpacing="0.1"
                        android:text="00:00:00"
                        android:textColor="@color/white"
                        android:textSize="@dimen/litterText" />

                    <TextView
                        android:id="@+id/textCountdownDes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@+id/textCountdown"
                        android:layout_toStartOf="@+id/textCountdown"
                        android:text="距结束仅剩"
                        android:textColor="@color/white"
                        android:textSize="@dimen/litterText" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <ImageView
                        android:id="@+id/imageZiYin"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/leftAndRight"
                        android:src="@mipmap/ziyin" />

                    <TextView
                        android:id="@+id/textTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/imageZiYin"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="润奢光彩美肤润奢光彩美肤润奢光彩美肤"
                        android:textColor="@color/light_black"
                        android:textSize="@dimen/bigText"
                        android:textStyle="bold" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/textDes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textTitle"
                    android:layout_marginLeft="@dimen/leftAndRight"
                    android:layout_marginRight="@dimen/leftAndRight"
                    android:layout_marginTop="10dp"
                    android:text="奢润光彩美肌奢润光彩美肌奢润光彩美肌奢润光彩美肌奢润光彩美肌奢润光彩美肌奢润光彩美肌奢润光彩美肌"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/litterText" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/textPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/leftAndRight"
                        android:text="¥299"
                        android:textColor="@color/basic_color"
                        android:textSize="@dimen/MoreBigText" />

                    <TextView
                        android:layout_alignBaseline="@+id/textPrice"
                        android:id="@+id/textYuanJia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/textPrice"
                        android:text="¥288"
                        android:textSize="@dimen/moreLitterText" />

                    <TextView
                        android:id="@+id/textVipDes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/textYuanJia"
                        android:background="@drawable/shape_huiyuan_5dp"
                        android:paddingBottom="2dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="2dp"
                        android:text="V1会员价"
                        android:textColor="#fe7b81"
                        android:textSize="@dimen/moreLitterText" />

                    <TextView
                        android:layout_alignBaseline="@+id/textPrice"
                        android:id="@+id/textSaleNumStockNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/leftAndRight"
                        android:text="已售3556|剩5件"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/normal_textsize" />
                </RelativeLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/textOldPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="@dimen/leftAndRight"
                        android:background="@drawable/shape_tianmao_5dp"
                        android:paddingBottom="2dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="2dp"
                        android:text="天猫价¥3200"
                        android:textColor="#fe7b81"
                        android:textSize="@dimen/moreLitterText" />
                    <TextView
                        android:id="@+id/textOldPriceJD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="@dimen/leftAndRight"
                        android:background="@drawable/shape_tianmao_5dp"
                        android:paddingBottom="2dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="2dp"
                        android:text="天猫价¥3200"
                        android:textColor="#fe7b81"
                        android:textSize="@dimen/moreLitterText" />
                </LinearLayout>
                <RelativeLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff3f3">

                    <ImageView
                        android:id="@+id/iamge0300"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="@dimen/leftAndRight"
                        android:layout_marginTop="10dp"
                        android:src="@mipmap/qiandai" />

                    <TextView
                        android:id="@+id/textShareMoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/iamge0300"
                        android:text="分享赚 ¥7836"
                        android:textColor="@color/light_black"
                        android:textSize="@dimen/normal_textsize" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@color/background" />

                <RelativeLayout
                    android:background="@drawable/layout_selector_white_system_gray"
                    android:id="@+id/viewChuXiao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textPromotionsBefore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="@dimen/leftAndRight"
                        android:layout_marginTop="15dp"
                        android:text="2个促销"
                        android:textColor="@color/light_black"
                        android:textSize="@dimen/normal_textsize" />

                    <ImageView
                        android:id="@+id/image0400"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/leftAndRight"
                        android:src="@mipmap/right" />

                    <TextView
                        android:id="@+id/textpromotionsBeforeDes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/image0400"
                        android:text="全场5折年货节，1.4亿大礼等你抢"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/normal_textsize" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/background" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="@dimen/leftAndRight"
                        android:layout_marginTop="15dp"
                        android:text="U币"
                        android:textColor="@color/light_black"
                        android:textSize="@dimen/normal_textsize" />

                    <ImageView
                        android:visibility="invisible"
                        android:id="@+id/image0500"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/leftAndRight"
                        android:src="@mipmap/right" />

                    <TextView
                        android:id="@+id/textScoreDes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/image0500"
                        android:text="积分"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/normal_textsize" />

                    <!--<TextView-->
                    <!--android:id="@+id/text0501"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:layout_toLeftOf="@+id/text0500"-->
                    <!--android:text="239"-->
                    <!--android:textColor="@color/basic_color"-->
                    <!--android:textSize="@dimen/normal_textsize" />-->

                    <!--<TextView-->
                    <!--android:id="@+id/text0502"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:layout_toLeftOf="@+id/text0501"-->
                    <!--android:text="购买最高可获"-->
                    <!--android:textColor="@color/text_gray"-->
                    <!--android:textSize="@dimen/normal_textsize" />-->
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/background" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/text0800"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="@dimen/leftAndRight"
                        android:layout_marginTop="15dp"
                        android:text="服务"
                        android:textColor="@color/light_black"
                        android:textSize="@dimen/normal_textsize" />

                    <com.vip.uyux.customview.WrapHeightGridView
                        android:id="@+id/gridview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="7dp"
                        android:layout_toRightOf="@+id/text0800"
                        android:numColumns="2" />

                </RelativeLayout>

                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@color/background" />
                <RelativeLayout
                    android:background="@drawable/layout_selector_white_system_gray"
                    android:id="@+id/viewPingLun"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/textPingLunTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="@dimen/leftAndRight"
                        android:layout_marginTop="15dp"
                        android:text="用户点评（888+）"
                        android:textColor="@color/light_black"
                        android:textSize="@dimen/normal_textsize" />

                    <ImageView
                        android:id="@+id/image0900"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/leftAndRight"
                        android:src="@mipmap/right" />

                    <TextView
                        android:id="@+id/textPingLunDes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/image0900"
                        android:text="98.3%好评"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/normal_textsize" />
                </RelativeLayout>

                <com.jude.easyrecyclerview.EasyRecyclerView
                    android:id="@+id/recyclerViewTop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:scrollbarStyle="insideOverlay" />
                <TextView
                    android:id="@+id/linePingLun"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@color/background" />

            </LinearLayout>
            <android.support.design.widget.TabLayout
                android:id="@+id/tablayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/normalItemHeight"
                android:background="@color/white"
                app:tabIndicatorColor="@color/basic_color"
                app:tabIndicatorHeight="0dp"
                app:tabMode="fixed"
                app:tabSelectedTextColor="@color/basic_color"
                app:tabTextAppearance="@style/TabLayoutTextStyle"
                app:tabTextColor="@color/light_black" />
        </android.support.design.widget.AppBarLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <android.support.v4.view.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v4.view.ViewPager>
        </RelativeLayout>
    </android.support.design.widget.CoordinatorLayout>
    <include
        android:visibility="gone"
        android:layout_below="@+id/includeBar"
        android:layout_above="@+id/viewDiBu"
        android:id="@+id/viewError"
        layout="@layout/view_error"
        android:layout_height="match_parent"
        android:layout_width="match_parent" />
    <RelativeLayout
        android:gravity="center"
        android:layout_below="@+id/includeBar"
        android:layout_above="@+id/viewDiBu"
        android:id="@+id/viewProgress"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/view_progress" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/viewDiBu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/normalItemHeight"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageKeFu"
                android:layout_width="@dimen/normalItemHeight"
                android:layout_height="@dimen/normalItemHeight"
                android:padding="13dp"
                android:src="@mipmap/kefu_chanpin" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/background" />
            <RelativeLayout
                android:id="@+id/viewGouWuChe"
                android:layout_width="45dp"
                android:layout_height="45dp">
                <ImageView
                    android:id="@+id/imageGouWuChe"
                    android:layout_width="@dimen/normalItemHeight"
                    android:layout_height="@dimen/normalItemHeight"
                    android:padding="13dp"
                    android:src="@mipmap/car_chanpin" />
            </RelativeLayout>


            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/background" />

            <TextView
                android:id="@+id/textJiaRuGWC"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:text="加入购物袋"
                android:textColor="@color/light_black"
                android:textSize="@dimen/bigText"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textLiJiGouMai"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/basic_color"
                android:gravity="center"
                android:text="立即购买"
                android:textColor="@color/white"
                android:textSize="@dimen/bigText"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
