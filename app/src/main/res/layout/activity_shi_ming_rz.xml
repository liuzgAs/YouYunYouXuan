<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context="com.vip.uyux.activity.ShiMingRZActivity">

    <include layout="@layout/view_bar_white" />

    <TextView
        android:id="@+id/textDes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/basic_color"
        android:lineSpacingMultiplier="1.2"
        android:paddingBottom="10dp"
        android:paddingLeft="@dimen/leftAndRight"
        android:paddingRight="@dimen/leftAndRight"
        android:paddingTop="10dp"
        android:text="海关要求购买跨境商品需提供实名信息哦~"
        android:textColor="@color/white"
        android:textSize="@dimen/litterText" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/normalItemHeight"
        android:layout_marginTop="5dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/text0000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/leftAndRight"
            android:text="真实姓名"
            android:textColor="@color/light_black"
            android:textSize="@dimen/normal_textsize" />

        <EditText
            android:id="@+id/editName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/text0000"
            android:background="@color/white"
            android:gravity="center_vertical|right"
            android:hint="请输入您的真实姓名"
            android:paddingLeft="@dimen/leftAndRight"
            android:paddingRight="@dimen/leftAndRight"
            android:textSize="@dimen/normal_textsize" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/normalItemHeight"
        android:layout_marginTop="1dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/text0100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/leftAndRight"
            android:text="身份证号码"
            android:textColor="@color/light_black"
            android:textSize="@dimen/normal_textsize" />

        <EditText
            android:id="@+id/editCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/text0100"
            android:background="@color/white"
            android:digits="0123456789Xx"
            android:gravity="center_vertical|right"
            android:hint="请输入您的身份证号码"
            android:inputType="number"
            android:maxLength="18"
            android:paddingLeft="@dimen/leftAndRight"
            android:paddingRight="@dimen/leftAndRight"
            android:textSize="@dimen/normal_textsize" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/normalItemHeight"
        android:layout_marginTop="1dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/text0200"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/leftAndRight"
            android:text="手机号码"
            android:textColor="@color/light_black"
            android:textSize="@dimen/normal_textsize" />

        <EditText
            android:id="@+id/editPhone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/text0200"
            android:background="@color/white"
            android:gravity="center_vertical|right"
            android:hint="请输入您的手机号码"
            android:inputType="number"
            android:maxLength="11"
            android:paddingLeft="@dimen/leftAndRight"
            android:paddingRight="@dimen/leftAndRight"
            android:textSize="@dimen/normal_textsize" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/normalItemHeight"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="1dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/textView144"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="验证码"
            android:textColor="@color/light_black"
            android:textSize="@dimen/normal_textsize" />

        <TextView
            android:id="@+id/buttonSms"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:paddingRight="10dp"
            android:text="发送验证码"
            android:textColor="@color/basic_color"
            android:textSize="@dimen/normal_textsize" />

        <EditText
            android:id="@+id/editCode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/textView144"
            android:layout_toLeftOf="@+id/buttonSms"
            android:layout_toRightOf="@+id/textView144"
            android:layout_toStartOf="@+id/buttonSms"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入验证码"
            android:inputType="number"
            android:maxLength="6"
            android:paddingLeft="10dp"
            android:textSize="@dimen/normal_textsize" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textLiaoJie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:paddingBottom="10dp"
        android:paddingRight="@dimen/leftAndRight"
        android:paddingTop="10dp"
        android:text="了解实名认证"
        android:textSize="@dimen/litterText" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnTiJiao"
            style="@style/bottomBtn"
            android:text="提交" />
    </RelativeLayout>
</LinearLayout>
