<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/viewBar"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/tranblack"
    android:fitsSystemWindows="true"
    android:gravity="bottom"
    android:minHeight="?attr/actionBarSize"
    android:orientation="vertical">


    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titleHeight">

        <ImageView
            android:paddingLeft="@dimen/leftAndRight"
            android:background="@drawable/white_selector"
            android:id="@+id/imageXiaoXi"
            android:layout_width="45dp"
            android:paddingRight="13dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/mine_xinxi"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:text="个人中心"
            android:maxLength="8"
            android:textStyle="bold"
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/light_black"
            android:textSize="@dimen/titleSize"/>

        <ImageView
            android:paddingLeft="13dp"
            android:background="@drawable/white_selector"
            android:id="@+id/imageSheZhi"
            android:layout_width="45dp"
            android:paddingRight="@dimen/leftAndRight"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/mine_shezhi"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <TextView
        android:background="@color/line_gray"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
</LinearLayout>