<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/viewBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:gravity="bottom"
    android:minHeight="?attr/actionBarSize"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/tranblack"
    app:cardCornerRadius="0dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/titleHeight"
        android:layout_gravity="bottom"
        android:background="@color/white">

        <ImageView
            android:id="@+id/imageXiaoXi"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/white_selector"
            android:paddingLeft="@dimen/leftAndRight"
            android:paddingRight="13dp"
            android:src="@mipmap/mine_xinxi" />

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:maxLength="8"
            android:text="个人中心"
            android:textColor="@color/light_black"
            android:textSize="@dimen/titleSize"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageSheZhi"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/white_selector"
            android:paddingLeft="13dp"
            android:paddingRight="@dimen/leftAndRight"
            android:src="@mipmap/mine_shezhi" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
